<hc:GlowWindow
 x:Class="HandyControlDemo.Window.GlowWindow"
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
 xmlns:ex="clr-namespace:HandyControlDemo.Tools.Extension"
 xmlns:hc="https://handyorg.github.io/handycontrol"
 xmlns:langs="clr-namespace:HandyControlDemo.Properties.Langs"
 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
 Title="{ex:Lang Key={x:Static langs:LangKeys.Title}}"
 Width="800"
 Height="450"
 ActiveGlowColor="{DynamicResource PrimaryColor}"
 Background="{DynamicResource MainContentBackgroundBrush}"
 Icon="/HandyControlDemo;component/Resources/Img/icon.ico"
 Style="{StaticResource WindowGlow}"
 WindowStartupLocation="CenterScreen"
 mc:Ignorable="d"
 >
    <Border Background="{DynamicResource EditorLineNumbersForeground}">

        <hc:FeatherPresenter VerticalAlignment="Bottom" Background="Red">
            <hc:FeatherPresenterItem  Background="Snow" Height="20" Width="20" Title="221"/>
            <hc:FeatherPresenterItem Title="124" />
            <hc:FeatherPresenterItem />
            <hc:FeatherPresenterItem />
            <hc:FeatherPresenterItem />

        </hc:FeatherPresenter>
    </Border>
</hc:GlowWindow>
